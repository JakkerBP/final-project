<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="icon" href="/css/style.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
            <link rel="stylesheet" type="text/css" href="{{asset('css/style.css')}}" /> 
        {% endblock %}


        {% block javascripts %}
            <script src="https://kit.fontawesome.com/20685f7bf1.js" crossorigin="anonymous"></script>
            <script src="{{asset('js/main.js')}}"></script>
        {% endblock %}
    </head>
    <body>
        
        <header>
            <div class="burgerMenu">
                <div id="mySidenav" class="sidenav">
                    <a id="closeBtn" href="#" class="close">×</a>
                    <ul>
                    <li><a href="{{ path('home_user') }}">Accueil</a></li>
                    <li><a href="{{ path('ourC_user') }}">Nos créations</a></li>
                    <li><a href="{{ path('app_project_list') }}">Ma personnalisation</a></li>
                    <li><a href="{{ path('contact_user') }}">Contact</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('app_admin_user_index') }}">ADMIN</a></li>
                    {% endif %}
                    </ul>
                </div>
                
                <a href="#" id="openBtn">
                    <span class="burger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                    </span>
                </a>
                </div>
            <div class="containerTitleWS">
                <h1>KeycapCustom</h1>
            </div>
            <nav>
                <ul>
                    <li id="li1"><a href="{{ path('home_user') }}">Accueil</li></a> 
                    <li id="li2"><a href="{{ path('ourC_user') }}">Nos créations</li></a>
                    <li id="li3"><a href="{{ path('app_project_list') }}">Ma personnalisation</li></a> 
                    <li id="li4"><a href="{{ path('contact_user') }}">Contact</a></li>
                    
                </ul>
            </nav>
            <div class="userLogo">
                <div class="buttonUser">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <div class="dropDownMenu">
                        <ul>
                        {% if app.user %}
                            <a href="{{ path('app_register_details') }}"><li>Mon compte</li></a> 
                            <a href="{{ path('app_order_list')}}"><li>Mes commandes</li></a>
                            <a href="{{ path('app_logout') }}"><li>Déconnexion</li></a>  
                        {% else %}
                            <a href="{{ path('app_login') }}"><li> Se Connecter</li></a>
                            <a href="{{ path('app_register') }}"><li> S'inscrire</li></a>    
                        {% endif %} 
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a style="text-transform:none; color: white ;" href="{{ path('app_admin_user_index') }}">ADMIN</a></li>
                        {% endif%}
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        {% block body %}
        {% endblock %}
        
        <footer>
            <div class="higherPartFooter">
                <div class="titleFooter">
                    <h1>KeycapCustom</h1>
                </div>
                <div class="mentions">
                    <ul>
                        <li><a href="">CGV</a></li>
                        <li><a href="">Mentions légales</a></li>
                        <li><a href="">A propos</a></li>
                        <li><a href="">Contact</a></li>
                    </ul>
                </div>
            </div>
            <div class="lowerPartFooter">
                <ul>
                    <a href=""><li><i class="fa fa-twitter" aria-hidden="true"></i></li></a>
                    <a href=""><li><i class="fa fa-facebook" aria-hidden="true"></i></li></a>
                    <a href=""><li><i class="fa fa-instagram" aria-hidden="true"></i></li></a>
                </ul>
            </div>
        </footer>
    </body>
</html>
